@model GestionBerger.Models.EtatSante

@{
    ViewData["Title"] = "Ajouter";
}

<h1>Ajout d'États de Santés</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomEtatSante" class="control-label">Nom de l'État de Santé</label>
                <input asp-for="NomEtatSante" class="form-control" />
                <span asp-validation-for="NomEtatSante" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-success" /> 
                <button type="submit" class="btn btn-info">Précédent</button>
            </div>
        </form>
    </div>
</div>

