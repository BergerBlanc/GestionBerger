@model GestionBerger.Models.Citoyen

@{
    ViewData["Title"] = "Create";
}
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDMpronCC8Jc9Ef-0brqEeEzJ7XOmsZ-hI&libraries=places"></script>

<h1>Create</h1>

<h4>Citoyen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomCitoyen" class="control-label">Nom du citoyen</label>
                <input asp-for="NomCitoyen" class="form-control" />
                <span asp-validation-for="NomCitoyen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telephone" class="control-label">Téléphone</label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telephone2" class="control-label">Téléphone 2</label>
                <input asp-for="Telephone2" class="form-control" />
                <span asp-validation-for="Telephone2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ville" class="control-label">Ville</label>
                <input asp-for="Ville" class="form-control" />
                <span asp-validation-for="Ville" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Civique" class="control-label">Numéro civique</label>
                <input asp-for="Civique" class="form-control" />
                <span asp-validation-for="Civique" class="text-danger"></span>
            </div>

            <div class="form-group">
                
                <label asp-for="Rue" class="control-label">Rue</label>
                <select asp-for="Rue" class="form-control" asp-items="ViewBag.ListeRues">
                    <option value="">Choisir une rue</option>
                </select>
                
                @* <label asp-for="Rue" class="control-label">Rue</label>
                <input asp-for="Rue" class="form-control" />
                <span asp-validation-for="Rue" class="text-danger"></span> *@
            </div>

            

            <div class="form-group">
                <label asp-for="CodePostal" class="control-label">Code Postal</label>
                <input asp-for="CodePostal" class="form-control" />
                <span asp-validation-for="CodePostal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Commentaires" class="control-label">Commentaires</label>
                <input asp-for="Commentaires" class="form-control" />
                <span asp-validation-for="Commentaires" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <form asp-action="Index" method="get" style="display:inline;">

        <button type="submit" class="btn btn-info">Retour à la Liste</button>
    </form>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
