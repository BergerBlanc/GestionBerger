                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commentaires)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.matricule">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.matricule">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.matricule">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
